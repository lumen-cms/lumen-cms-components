.v-carousel {
  .v-carousel__item {
    .v-responsive__content > .v-card {
      height: 100% !important
      > .media-column {
        height: 100% !important
      }
      > .v-card__title {
        position absolute
        bottom: 0
      }
    }
  }

  .content-element {
    background-color transparent !important
  }

  .slider-title-centered {
    position absolute
    top: 50%
    left: 50%
    text-align: center
    transform: translate(-50%, -50%)
    &.theme--dark {
      color: white
    }
  }
}
